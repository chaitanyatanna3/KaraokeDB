<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etxt_title"
            android:ems="10"
            android:hint="Song Title"
            android:nextFocusDown="@+id/etxt_artist"
            android:singleLine="true"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etxt_artist"
            android:layout_below="@+id/etxt_title"
            android:ems="10"
            android:hint="Song Artist"
            android:nextFocusDown="@+id/etxt_moviename"
            android:singleLine="true"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etxt_moviename"
            android:layout_below="@+id/etxt_artist"
            android:ems="10"
            android:hint="Movie Name"
            android:singleLine="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_submit"
            android:layout_below="@+id/etxt_moviename"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:weightSum="2">
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/button_add"
                android:layout_weight="1"
                android:text="Add"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/button_reset"
                android:layout_weight="1"
                android:text="Reset"/>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>